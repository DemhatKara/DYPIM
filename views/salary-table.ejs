<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Kayit</title>
</head>

<nav class="navbar navbar-expand-lg bg-body-tertiary">
    <div class="container-fluid">
        <a class="navbar-brand" href="#">PB</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" aria-current="page" href="/">Anasayfa</a>
                </li>
                <% if(user && isAdmin) { %>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Personel Bilgileri</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/salary">Maaş Bilgileri</a>
                    </li>
                    <% } %>
            </ul>
            <form class="d-flex ms-auto">
                <% if(user) { %>
                    <a class="nav-link form-control m-2" href="/logout">Çıkış</a>
                    <a class="nav-link form-control m-2" href="/profile">Profilim</a>
                    <% }else { %>

                        <a class="nav-link form-control m-2" href="/register">Kayıt</a>
                        <a class="nav-link form-control m-2" href="/login">Giriş</a>
                        <a class="nav-link form-control m-2" href="/adminLogin">Admin</a>
                        <% } %>
            </form>
        </div>
    </div>
</nav>
<div class="container">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6 mt-5">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">İsim</th>
                        <th scope="col">Departman</th>
                        <th scope="col">Email</th>
                        <th scope="col">Telefon</th>
                        <th scope="col">Maaş</th>
                        <% if(isAdmin) { %>
                            <th scope="col">Güncelle</th>
                            <th scope="col">Sil</th>
                            <% } %>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach((user)=>{ %>
                        <tr>
                            <th>
                                <%= user.name %>
                            </th>
                            <td>
                                <%= user.departman %>
                            </td>
                            <td>
                                <%= user.email %>
                            </td>
                            <td>
                                <%= user.phone %>
                            </td>
                            <td>
                                <%= user.salary %>
                            </td>
                            <td>
                                <% if(isAdmin) { %>
                                    <a class="btn btn-primary"
                                        href="/salary-update?email=<%= user.email %>">Güncelle</a>
                            </td>
                            <td>
                                <a class="btn btn-danger" href="/salary-delete?email=<%= user.email %>">Sil</a>
                            </td>
                            <% } %>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>

    </div>
</div>

</body>

</html>